@model WebBanHangOnline.Models.RegisterViewModel
@{
    ViewBag.Title = "ĐĂNG KÝ";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<div class="container" style="margin-top:160px">
    <div class="row" style=" position: relative; top: -21px; ">
        <div class="col-md-4" style="margin-top: 36px">
            <div style=" height: 47px; ">
                <div style="width: 432px; height: 55px; position: relative; top: 2px; left: -28px; border-radius: 76px 0 0 0; background-image: url(/Content/assets/images/Back_Regis.png);">
                    <span style="font-size: 43px; position: relative; top: 20px; color: darkgreen; left: 122px; font-family: emoji;">@ViewBag.Title</span>
                </div>
            </div>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr style="width: 433px; position: relative; left: -29px;" />
                <div class="row">
                    <div class="col-6" >
                        <div class="form-group" style=" position: relative; left: -44px; ">
                            <label for="Email" class="control-label" style=" font-size: 22px; margin-left: 15px; ">Email</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = " width: 200px; " })
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="FullName" class="control-label" style=" font-size: 22px; margin-left: 15px; ">Họ tên</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", style = " width: 200px; " })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group" style=" position: relative; left: -44px; ">
                            <label for="Phone" class="control-label" style=" font-size: 22px; margin-left: 15px; ">Số ĐT</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", style = " width: 200px; " })
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Password" class="control-label" style=" font-size: 22px; margin-left: 15px; ">Mật khẩu</label>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = " width: 200px; " })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6" style=" position: relative; left: -44px; ">
                        <label for="ConfirmPassword" class="control-label" style="font-size: 22px;margin-left: 15px;width: 200px;">Nhập lại mật khẩu</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", style = " width: 200px; " })
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input style="cursor:pointer;width: 200px;position: relative;top: 30px; background-image:url(/Content/assets/images/Back_Regis.png); color:darkgreen" type="submit" class="btn btn-default" value="Đăng ký" />
                            </div>
                            
                        </div> 
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationSummary("", new { @class = "text-danger", style = "position: relative;width: 432px;left: -28px;top: 26px;" })
                </div>
            }

        </div>
        <div class="col-md-8" style="background-image: url(/Content/assets/images/Regis.png); height: 315px; position: relative; top: 38px; left: 56px;">
            <div style="width: 283px; height: 41px; background-color: white; position: relative; top: 18px; left: 447px; border-radius: 22px; ">
                <span style="color: darkgreen; position: relative; top: 10px; left: 14px;">Bạn đã có tài khoản?</span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="border-radius: 6px 20px 22px 6px; height: 33px; width: 108px; background-color: #FAEAD4; position: relative; top: -19px; left: 615px; ">
                    <a href="/account/login" style="font-style: italic; color: darkgreen; position: relative; top: 5px; ">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
    <hr style=" width: 1210px; margin: 20px 0 40px -29px; " />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


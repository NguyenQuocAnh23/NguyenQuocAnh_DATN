@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">

        <div class="col-4"></div>
        <div class="col-4">
            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div style="text-align: center; font-size: 100px; margin-top: -94px;"><i class="fa fa-user-plus"></i></div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Họ tên</label>
                    <input style="color: black;" type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName">

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">SDT</label>
                    <input style="color: black;" type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Tên tài khoản</label>
                    <input style="color: black;" type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>

                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input style="color: black;" type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>

                </div>
                <div class="form-group">

                    <button type="submit" style="width: 100%; background-color: darkblue; " onclick="showSuccessMessage()" class="btn btn-success">Sửa</button>

                </div>}
        </div>
        <div class="col-4">
            @*Html.Action("LichSuDonHang", "Contact")*@
        </div>

        <!--<div class="col-md-12">-->
        
        <!--</div>-->


    </div>
</div>

<script>
    function showSuccessMessage() {
        alert('Sửa thông tin thành công!');
    }
</script>
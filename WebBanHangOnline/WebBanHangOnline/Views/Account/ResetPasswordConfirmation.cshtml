﻿@{
    ViewBag.Title = "Đổi mật khẩu thành công";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4" style="margin: 100px 0 100px 0">
            <h1 style="text-align:center" class="title-news"> @ViewBag.Title</h1>

            <p style="text-align:center">
                @Html.ActionLink("Nhấn vào đây để đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
        <div class="col-4"></div>

    </div>

</div>
﻿@using WebBanHangOnline.Common
@{
    ViewBag.Title = "Giỏ hàng";

}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix" style=" margin-top: -95px; margin-bottom:-35px">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center" style="border:1px">
                <ul>
                    <li><a href="/home">Trang chủ</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->

            <div class="row" style="margin-bottom: 193px ">
                <div class="col-md-12" id="load_data" style="margin-top: -82px;">
                    @Html.Action("Partial_Item_Cart", "ShoppingCart")
                </div>
                <div class="col-md-12">
                    @if (ViewBag.CheckCart != null)
                    {
                        <div class="row">
                            <div class="col-3">
                                <div class="text-left">
                                    <a href="/san-pham" class="btn" style="border: 1px solid darkblue; border-radius: 5px; color: darkblue;">Mua thêm</a>
                                </div>

                            </div>
                            <div class="col-9">
                                <div class="text-right">
                                    <a href="#" class="btn btn-danger btnDeleteAll">Xóa toàn bộ sản phẩm</a>
                                    @*<a href="/thanh-toan" class="btn" style="background-color:darkblue; color:white">Đặt hàng</a>*@
                                    @if (Request.IsAuthenticated)
                                    {
                                        <a href="/thanh-toan" class="btn" style="background-color:darkblue; color:white">Đặt hàng</a>
                                    }
                                    else
                                    {
                                        <a href="javascript:void(0);" class="btn" style="background-color:darkblue; color:white" onclick="showLoginMessage()">Đặt hàng</a>
                                    }

                                </div>

                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script type="text/javascript">
        function showLoginMessage() {
            alert('Vui lòng đăng nhập để có thể đặt mua hàng.');
            window.location.href = '/account/login';
        }
    </script>
}

﻿@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>
@using WebBanHangOnline.Common
<table class="table">
    <tr id="tableHeader" class="text-center">
        <th>STT</th>
        <th>Ảnh sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Danh mục</th>
        <th>Giá</th>
        <th>Size</th>
        <th style="width:100px;">Số lượng</th>
        <th>Tồn kho</th>
        <th>Thành tiền</th>
        <th style="width: 104.2px; ">
            Thao tác
        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        var tongtien = decimal.Zero;
        foreach (var item in Model)
        {
            tongtien += item.TotalPrice;
            <tr class="text-center" id="trow_@item.ProductId">
                <td>@(i+1)</td>
                <td><img src="@item.ProductImg" width="60" /></td>
                <td>
                    <a style="color: rebeccapurple" href="/chi-tiet/@item.Alias-p@(item.ProductId)">
                        @item.ProductName
                    </a>
                </td>
                <td>@item.CategoryName</td>
                <td>@Common.FormatNumber(item.Price, 0)</td>
                <td>
                    @item.Size
                </td>
                <td><input type="number" class="form-control" id="Quantity_@item.ProductId" value="@item.Quantity" /></td>
                <td id="soSanhTon">@item.ProductQuantity</td>
                <th>@Common.FormatNumber(item.TotalPrice, 2)</th>
                <td>
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete" style=" width: 80px; position: relative; top: -6px; "><i class="fa fa-trash"></i></a>
                    <a href="#" data-id="@item.ProductId" class="btn btn-sm btnUpdate" style="background-color:darkblue; color:white">Cập nhật</a>
                </td>
            </tr>
            i++;
        }
        <tr>
            <th colspan="8" class="text-right">Tổng: </th>
            <th class="text-center">@Common.FormatNumber(tongtien, 0)</th>
            <th></th>
        </tr>

    }
    else
    {
        <tr>
            <th><i style=" font-size: 193px; position: relative; top: 53px; left: 225px; " class="fa fa-cart-arrow-down"></i></th>

            <th style="position: relative; top: 100px; left: 147px; " colspan="7"><span style="font-size: 45px ">Giỏ hàng trống!</span><a href="/san-pham" style="color:blue"> Mua ngay</a></th>
        </tr>
    }
</table>

<script>
    $(document).ready(function () {
        // Kiểm tra xem có sản phẩm trong giỏ hàng hay không
        var hasItems = @((Model != null && Model.Any()).ToString().ToLower());

        // Lấy phần tiêu đề của bảng
        var tableHeader = document.getElementById("tableHeader");

        // Nếu không có sản phẩm trong giỏ hàng, ẩn tiêu đề của bảng
        if (!hasItems) {
            tableHeader.style.display = "none";
        } else {
            tableHeader.style.display = "table-row";
        }
    });
</script>


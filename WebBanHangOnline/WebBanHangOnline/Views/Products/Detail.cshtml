﻿@model WebBanHangOnline.Models.EF.Product
@{
    ViewBag.Title = Model.SeoTitle;
    ViewBag.SeoDescription = Model.SeoDescription ?? Model.Title;
    ViewBag.SeoKeyWord = Model.SeoKeywords ?? Model.Title;
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">
@if (Model != null)
{


    <div class="container single_product_container" style=" top: -96px; left: 23px; ">
        <div class="row">
            <div class="col">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="/">Trang chủ</a></li>
                        <li><a href="/danh-muc-san-pham/@Model.ProductCategory.Alias-@Model.ProductCategoryId"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.ProductCategory.Title</a></li>
                        <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.Title</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="row" style="top:-75px">
            <div class="col-lg-7">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    <div class="single_product_pics">
                        <div class="row">
                            <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                                <div class="single_product_thumbnails">
                                    <ul>
                                        @foreach (var item in Model.ProductImages)
                                        {
                                            if (item.isDefault)
                                            {
                                                <li style=" width: 136px; height: 156.4px;" class="active"><img src="@item.Image" alt="" data-image="@item.Image"></li>
                                            }
                                            else
                                            {
                                                <li style=" width: 136px; height: 156.4px;"><img src="@item.Image" alt="" data-image="@item.Image"></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-9 image_col order-lg-2 order-1">
                                <div class="single_product_image" style=" width: 460px; height: 529px;">
                                    <div class="single_product_image_background" style="background-image:url(@Model.ProductImages.FirstOrDefault(x=>x.isDefault).Image)"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="col-lg-5">

                <div class="row" style="height: 280px">
                    <div class="col-lg-12">
                        <div class="product_details">
                            <div class="product_details_title">
                                <h2>@Model.Title<span><a style=" font-size: 20px; color: red; " class="scrollDown" href="#">(Chi tiết sản phẩm)</a></span></h2>
                                <p>@Model.Description</p>

                            </div>
                            @if (Model.PriceSale > 0)
                            {
                                <div class="original_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.Price, 0) đ</div>
                                <div style=" color: darkblue;" class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.PriceSale, 0) đ</div>
                            }
                            else
                            {
                                <div style=" color: darkblue;" class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.Price, 0) đ</div>
                            }
                            <ul class="star_rating">
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            </ul>


                        </div>
                    </div>
                </div>

                <div class="row" style="height:249px">

                    <div>

                        <div style="border: 1px solid red; width: 364px; height: 200px; border-radius: 9px; position: relative; left: 49px;">
                            <div style="position: relative; top: 17px; left: 15px; ">
                                <p style=" "><i style="margin-right: 5px; color: red" class="fa fa-check-square"></i>Thanh toán<span style="color:red"> sau khi kiểm tra và nhận hàng</span></p>
                                <p style=" "><i style="margin-right: 5px; color: red" class="fa fa-check-square"></i>Hỗ trợ đổi trả hàng trong vòng<span style="color:red"> 45 ngày</span></p>
                                <p style=" "><i style="margin-right: 5px; color: red" class="fa fa-check-square"></i>Sơn logo vợt<span style="color:red"> miễn phí</span></p>
                                <p style=" "><i style="margin-right: 5px; color: red" class="fa fa-check-square"></i>Bảo hành lưới đan<span style="color:red"> trong 72h</span> </p>
                                <p style=" "><i style="margin-right: 5px; color: red" class="fa fa-check-square"></i>Thay gen vợt<span style="color:red"> miễn phí trọn đời</span></p>
                            </div>
                            <div style=" border: 1px solid; border-radius: 4px; width: 71px; color: red; position: relative; top: -214px; left: 28px; background-color: white ">
                                <i class="fa fa-gift"></i>
                                <span>ƯU ĐÃI</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12" style="position: relative; top: -15px; ">
                        <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                            <span style="font-size: 24px;">Số lượng</span>
                            <div class="quantity_selector" style=" border-radius: 20px; border: 4px solid darkblue;">
                                <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                <span id="quantity_value">1</span>
                                <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                            </div>
                            <div class="red_button add_to_cart_button"><a style="background-color:darkblue" href="#" class="btnAddToCart" data-id="@Model.Id">Thêm vào giỏ hàng</a></div>

                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>

    <div class="tabs_section_container" style="top: -194px; ">

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="tabs_container">
                        <ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center">
                            <li class="tab active" data-active-tab="tab_1"><span><i class="fa fa-angle-down"></i> MÔ TẢ SẢN PHẨM <i class="fa fa-angle-down"></i></span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <!-- Tab Description -->

                    <div id="tab_1" class="tab_container active" style="top: -81px;">
                        <div class="row">
                            @Html.Raw(Model.Detail)
                        </div>
                    </div>

                    <!-- Tab Additional Info -->
                    <!-- Tab Reviews -->
                    <!--<div id="tab_3" class="tab_container">
                        <div class="row">-->
                    <!-- User Reviews -->
                    <!--<div class="col-lg-6 reviews_col">

                    </div>-->
                    <!-- Add Review -->
                    <!--<div class="col-lg-6 add_review_col">



                            </div>

                        </div>
                    </div>-->

                </div>
            </div>
        </div>

    </div>

}
@section scripts{
    <script src="~/Content/assets/js/single_custom_remake2.js"></script>
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy thẻ <a> có lớp scrollDown
        var link = document.querySelector("a.scrollDown");

        // Thêm sự kiện click cho thẻ <a>
        link.addEventListener("click", function (event) {
            event.preventDefault(); // Ngăn chặn hành động mặc định khi click vào thẻ <a>

            // Cuộn trang web xuống ...px từ đầu trang
            window.scrollTo({
                top: 780,
                behavior: "smooth" // Cuộn mượt
            });
        });
    });
</script>

﻿@model PagedList.PagedList<WebBanHangOnline.Models.EF.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
    
</style>
<div style="background-color: lightcyan; position: relative; top: -131px;"> 
    <div class="container news_section_container" style="position: relative; left: -49px; width: 1150px; margin-bottom: -179px; ">
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news" style=" font-family: fangsong;"> Tin tức</h1>
            </div>
        </div>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="row row-item-new">
                    <div class="col-md-3">
                        <div class="img-box">
                            <a href="/@item.Alias-n@(item.Id)" title="@item.Title"><img style="height:154px; width:255px" src="@item.Image" alt="@item.Title" /></a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="content-box">
                            <h3><a class="changeRed" style="font-family: fangsong; color: black;" href="/@item.Alias-n@(item.Id)" title="@item.Title" onmouseover="this.style.color='darkblue'" onmouseout="this.style.color='black'">@item.Title</a></h3>
                            <div class="description-box">
                                @item.Description
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div style="text-align: right; position: relative; top: -38px;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        }

    </div>
</div>


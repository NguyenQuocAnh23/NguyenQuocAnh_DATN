﻿@model IEnumerable<WebBanHangOnline.Models.EF.News>
@if (Model != null && Model.Any())
{

    <div class="blogs">
        <div class="container" style="margin-top:-45px">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2 style="font-family: emoji;">TIN TỨC CẦU LÔNG</h2>
                    </div>
                </div>
            </div>

            <div class="row blogs_container" style="height:562px">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                            <div class="blog_background" style="background-image:url(@item.Image); margin: 10px"></div>
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                <h4 class="blog_title">@item.Title</h4>
                                <span class="blog_meta">@*by @item.CreatedBy |*@ @item.CreatedDate.ToString("MMM dd,yyyy")</span>
                                <a class="blog_more" href="/@item.Alias-n@(item.Id)">chi tiết</a>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>

}

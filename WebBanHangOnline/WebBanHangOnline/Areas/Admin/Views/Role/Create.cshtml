@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Thêm mới quyền";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Trang chủ admin</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Trang chủ</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới quyền</h3>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Role", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false)
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label style="position: relative; left: 30%; font-size: 32px; ">Tên quyền</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button style="background-color:darkblue; width:100%" type="submit" class="btn btn-success">Thêm</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-4"></div>
        </div>
        
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

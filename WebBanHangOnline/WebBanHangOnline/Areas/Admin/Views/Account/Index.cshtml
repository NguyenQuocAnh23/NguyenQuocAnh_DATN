@model IEnumerable<WebBanHangOnline.Models.ApplicationUser>
@{
    ViewBag.Title = "Quản lý tài khoản";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account" class="nav-link">Danh sách tài khoản</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách tài khoản</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Email</th>
                        <th>Tên tài khoản</th>
                        <th>Họ tên người dùng</th>
                        <th>SDT</th>
                        <th style="width:110px">
                            <div class="card-tools">
                                <a href="/admin/account/create" class="btn btn-success" style=" background-color: darkblue; font-size: 14px;">Thêm mới</a>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;

                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                <td>@item.Fullname</td>
                                <td>@item.Phone</td>
                                <td>
                                    <a href="#" data-user="@item.UserName" class="btn btn-sm btn-danger btnDelete" style="width: 84px">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }

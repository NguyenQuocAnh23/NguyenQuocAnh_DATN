                    @if (Model != null && Model.Any())
                    {
                        // Sắp xếp danh sách tài khoản theo thời gian tạo giảm dần
                        var sortedModel = Model.OrderByDescending(item => item.CreatedDate);

                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;

                        foreach (var item in sortedModel)
                        {
                            <tr id="trow_@item.Id">
                                <td>@i</td>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                <td>@item.Fullname</td>
                                <td>@item.Phone</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @{
                                        var userRoles = ViewBag.UserRoles[item.Id] as List<string>;
                                        if (userRoles == null || userRoles.Count == 0)
                                        {
                                            <span>Customer</span>
                                        }
                                        else
                                        {
                                            foreach (var role in userRoles)
                                            {
                                                <span>@role</span>
                                            }
                                        }
                                    }
                                </td>
                                <td>
                                    <a style="width: 40px;" href="/admin/account/edit/@item.Id" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                    <a style="width: 40px;" href="#" data-user="@item.UserName" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            i++;
                        }
                    }


                </tbody>
            </table>
            <div style="text-align:center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>

﻿@model WebBanHangOnline.Models.EditAccountViewModel
@{
    ViewBag.Title = "Cập nhật tài khoản";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account" class="nav-link">Danh sách tài khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/account/edit" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card" style=" margin-top: 64px; ">
        <!--<div class="card-header">-->
            @*<h3 class="card-title" style="position: relative; left: 7%;">Sửa tài khoản</h3>*@

        <!--</div>-->

        <div class="card-body">
            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()

                <div class="row" style="margin-top: 17px">
                    <div class="col-1"></div>
                    <div class="col-5">
                        <div class="form-group">
                            <label>Tài khoản</label>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = "true" })
                        </div>
                        <div class="form-group">
                            <label>Họ tên</label>
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Quyền</label>
                            @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="CreatedDate">Ngày Tạo</label>
                            <input type="text" id="CreatedDate" name="CreatedDate" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <button style="width: 1022px; position: relative; right: 518px; background-color:darkblue" type="submit" class="btn btn-success">Sửa</button>
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<script>
    // Lấy ngày hiện tại
    var currentDate = new Date();

    // Format ngày hiện tại thành chuỗi yyyy-MM-dd
    var formattedDate = currentDate.toISOString().split('T')[0];

    // Đặt giá trị mặc định cho trường ngày tạo
    document.getElementById("CreatedDate").value = formattedDate;
</script>